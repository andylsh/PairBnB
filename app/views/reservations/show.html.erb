<div class="container">
	<h1><%= @reservation.listing.title %></h1>
		<div class="row">

			<div class="col-md-8">
				<div id="carousel-example-generic" class="carousel slide" data-ride="carousel">
				  <!-- Indicators -->
				  <ol class="carousel-indicators">
				    <li data-target="#carousel-example-generic" data-slide-to="0" class="active"></li>
				    <li data-target="#carousel-example-generic" data-slide-to="1"></li>
				    <li data-target="#carousel-example-generic" data-slide-to="2"></li>
				  </ol>

				   <div class="carousel-inner">
				   <% if @reservation.listing.images.empty? %>
				   <div class="item active">
				      <img class="img-fluid" src="http://placehold.it/750x450" alt="">
				    </div>
				    <div class="item">
				      <img class="img-fluid" src="http://placehold.it/750x450" alt="">
				    </div>
				    <div class="item">
				      <img class="img-fluid" src="http://placehold.it/750x450" alt="">
				    </div>
				    <% else %>
				    <div class="item active">
				      <%=  image_tag @reservation.listing.images.first.thumb.url, class: "img-fluid" %>
				    </div>
				   <% @reservation.listing.images.each do |image| %>
				    <div class="item">
				      <%= image_tag image.thumb.url, class: "img-fluid" %>
				    </div>
				   <% end %>
				    <%end %>
				  </div>

				  <!-- Controls -->
				  <a class="left carousel-control" href="#carousel-example-generic" data-slide="prev">
				    <span class="glyphicon glyphicon-chevron-left"></span>
				  </a>
				  <a class="right carousel-control" href="#carousel-example-generic" data-slide="next">
				    <span class="glyphicon glyphicon-chevron-right"></span>
				  </a>
				</div>
			</div>
		</div>

			<h2>Project Description</h2>
			<p><%= @reservation.listing.description %></p>
			<div class="col-md-4">	
				<h2>Project Details</h2>
					<ul>
						<li class="form-group">Property Type: <%= @reservation.listing.property_type%></li>
						<li class="form-group">Number of Rooms: <%= @reservation.listing.room_number %></li>
						<li class="form-group">Number of Beds: <%= @reservation.listing.bed_number %></li>
						<li class="form-group">Number of Guests: <%= @reservation.listing.guest_number %></li>
						<li class="form-group">Street Address: <%= @reservation.listing.address %></li>
						<li class="form-group">State: <%= @reservation.listing.state %></li>
						<li class="form-group">Postcode: <%= @reservation.listing.postcode %></li>
						<li class="form-group">Price: <%= @reservation.listing.price %></li>
						<li class="form-group">Hosted by: <%= @reservation.listing.user.full_name %></li>
					</ul><br>
				<h2> Reserved Details</h2>
					<ul>
						<li class="form-group">Check In: <%= @reservation.start_date.strftime('%d %B %Y') %></li>
						<li class="form-group">Check Out: <%= @reservation.end_date.strftime('%d %B %Y') %></li>
						<li class="form-group">Number of Guests: <%= @reservation.guest_no %></li>
						<li class="form-group">Total Price: <%= @reservation.total_price %></li>
					</ul>
			</div>

		</div><!-- /.row -->
		<div class="text-center">
			<%= link_to "Back", root_path, class: "btn btn-default" %>
		</div>
		
</div>