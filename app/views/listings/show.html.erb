<div class="container">
	<h1><%= @listing.title %></h1>
		<div class="row">

			<div class="col-md-8">
				<img class="img-fluid" src="http://placehold.it/750x500" alt="">
			</div>
			<div class="col-md-4">
				<h2>Project Description</h2>
				<p><%= @listing.description %></p>
				<h2>Project Details</h2>
					<ul>
					<li class="form-group">Property Type: <%= @listing.property_type%></li>
					<li class="form-group">Number of Rooms: <%= @listing.room_number %></li>
					<li class="form-group">Number of Beds: <%= @listing.bed_number %></li>
					<li class="form-group">Number of Guests: <%= @listing.guest_number %></li>
					<li class="form-group">Street Address: <%= @listing.address %></li>
					<li class="form-group">State: <%= @listing.state %></li>
					<li class="form-group">Postcode: <%= @listing.postcode %></li>
					<li class="form-group">Price: <%= @listing.price %></li>
					</ul>
			</div>

		</div><!-- /.row -->
		
	<h2>Related Projects</h2>

		<div class="row">

			<div class="col-md-4">
				<div class="img-position">
					<a href="#">
						<img class="img-fluid" src="http://placehold.it/500x300" alt="">
					</a>
				</div>
			</div>

			<div class="col-md-4">
				<div class="img-position">
					<a href="#">
						<img class="img-fluid" src="http://placehold.it/500x300" alt="">
					</a>
				</div>
			</div>

			<div class="col-md-4">
				<div class="img-position">
					<a href="#">
						<img class="img-fluid" src="http://placehold.it/500x300" alt="">
					</a>
				</div>
			</div>


		</div>
	
	<div class="text-center">
		<% if @listing.user_id == current_user.id %>
			< link_to 'Edit', edit_listing_path(listing)> 
			 | < link_to 'Delete', listing_path(listing), method: :delete, data: { confirm: 'Are you sure?' } >
		<% else %>
			<p> Edit | Delete </p>
		<% end %> 
	</div>
			
	<%= link_to 'Back', listings_path ,class: "btn btn-default" %>
	<div class="book-now">
		<%= link_to 'Book Now', new_listing_path ,class: "btn btn-success" %>
	</div>
</div><!-- /.container -->